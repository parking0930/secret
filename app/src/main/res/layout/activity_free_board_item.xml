<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FreeBoardItemActivity">

    <LinearLayout
        android:id="@+id/FreeBoardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/FreeBoardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gyunggi_bold"
            android:text="제목"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/mainView3"
            app:layout_constraintEnd_toEndOf="@+id/mainView3"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="@+id/mainView3"
            app:layout_constraintTop_toTopOf="@+id/mainView3"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/FreeBoardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gyunggi_medium"
            android:text="내용"
            android:textSize="15dp"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/mainView3"
            app:layout_constraintEnd_toEndOf="@+id/mainView3"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="@+id/mainView3"
            app:layout_constraintTop_toTopOf="@+id/mainView3"
            app:layout_constraintVertical_bias="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/FreeBoardDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gyunggi_medium"
                android:text="작성일"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/mainView3"
                app:layout_constraintEnd_toEndOf="@+id/mainView3"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="@+id/mainView3"
                app:layout_constraintTop_toTopOf="@+id/mainView3"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/FreeBoardWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gyunggi_medium"
                android:text="작성자"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/mainView3"
                app:layout_constraintEnd_toEndOf="@+id/mainView3"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="@+id/mainView3"
                app:layout_constraintTop_toTopOf="@+id/mainView3"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/FreeBoardViewcnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gyunggi_medium"
                android:text="조회수"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/mainView3"
                app:layout_constraintEnd_toEndOf="@+id/mainView3"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="@+id/mainView3"
                app:layout_constraintTop_toTopOf="@+id/mainView3"
                app:layout_constraintVertical_bias="0.1" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>