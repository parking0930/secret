<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp">
        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gyunggi_bold"
            android:gravity="center"
            android:text="EverSecret"
            android:textColor="#2196F3"
            android:textSize="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gyunggi_bold"
            android:gravity="center"
            android:text="초·중·고 학생들의 익명 커뮤니티"
            android:textColor="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/BoardReadTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/gyunggi_bold"
            android:gravity="left"
            android:text="제목"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/BoardReadWriter"
            android:layout_width="106dp"
            android:layout_height="21dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gyunggi_bold"
            android:gravity="left"
            android:text="작성자"
            android:textColor="#2196F3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BoardReadContent" />

        <TextView
            android:id="@+id/BoardReadContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/gyunggi_bold"
            android:gravity="left"
            android:minHeight="100dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="내용"
            android:textSize="15dp"
            android:background="@drawable/ic_board_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BoardReadTitle" />

        <TextView
            android:id="@+id/BoardReadViewCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gyunggi_bold"
            android:gravity="left"
            android:text="ViewCnt"
            android:textColor="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintStart_toEndOf="@+id/BoardReadDate"
            app:layout_constraintTop_toBottomOf="@+id/BoardReadContent" />

        <TextView
            android:id="@+id/BoardReadDate"
            android:layout_width="108dp"
            android:layout_height="18dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gyunggi_bold"
            android:gravity="left"
            android:text="Date"
            android:textColor="#2196F3"
            app:layout_constraintStart_toEndOf="@+id/BoardReadWriter"
            app:layout_constraintTop_toBottomOf="@+id/BoardReadContent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>